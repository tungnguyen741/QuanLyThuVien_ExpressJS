extends ../layout/common.pug
block content
 div(class="container mt-5")
  h2 Thêm sách
  form(action="/books/add", method="POST", enctype="multipart/form-data")
   if(errors)
     each error in errors
      .alert.alert-danger.w-50= error
   div(class="form-group")
    label Tên sách 
    input(class="form-control w-50", type="text", name="titleAdded", value=values?values.titleAdded:"")
    br
    label Mô tả sách
    input(class="form-control w-50", type="text", name="descriptionAdded", value=values?values.descriptionAdded:"")
    br
    .d-block
      label avatar
        input(class="form-control-file",type="file", name="avatarBook")
    button(class="btn btn-primary") Add

  a(href="/books") Go back home