extends ../layout/common.pug
block content
  div(class="container mt-4")
    h2 Đăng ký tài khoản mới
    if(errors)
      each error in errors
        .alert.alert-danger.w-50= error
    form(class="form-group",action="/users/add", method="POST", enctype="multipart/form-data")
      label Tên 
      input(class="form-control w-50",type="text", name="name",  value=values?values.name:"")
      br
      label Ngày sinh
      input(class="form-control w-50",type="date", name="age",  value=values?values.age:"")
      br
      label email
      input(class="form-control w-50",type="text", name="email",  value=values?values.email:"")
      br
      label password
      input(class="form-control w-50",type="password", name="password")
      br
      label Giới tính
      select(class="form-control w-50",name="GioiTinh")
        option(value="Nam") Nam
        option(value="Nữ") Nữ
          br
      label avatar
      input(class="form-control-file w-50",type="file", name="avatar")
      br
      div
        button(class="btn btn-info mt-3") Add
    
